<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="20dp"

        android:layout_alignParentTop="true"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@+id/heart"

        android:text="TextView"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="251dp"
        android:layout_below="@+id/username"
        android:scaleType="fitXY"
        app:srcCompat="@android:color/black"
        android:layout_marginTop="15dp"/>

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:srcCompat="@drawable/ufi_heart"
        android:layout_below="@id/imageView"
        android:layout_marginLeft="10dp"
        android:id="@+id/heart" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:srcCompat="@drawable/ufi_comment"
        android:layout_below="@id/imageView"
        android:layout_toRightOf="@id/heart"
        android:layout_marginLeft="5dp"
        android:id="@+id/comment" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:srcCompat="@drawable/ufi_new_direct"
        android:layout_below="@id/imageView"
        android:layout_toRightOf="@id/comment"
        android:layout_marginLeft="5dp"
        android:id="@+id/share" />

    <ImageView
        android:id="@+id/save"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/imageView"
        app:srcCompat="@drawable/ufi_save" />

    <ImageView
        android:id="@+id/profile"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/username"
        app:srcCompat="@android:drawable/sym_def_app_icon"

        />


    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/comment"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:text="TextView"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:layout_toRightOf="@id/postusername"
        android:layout_marginRight="7dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/heart"
        android:id="@+id/postusername"
        android:text="TextView"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="5dp"
        android:paddingEnd="5dp"
        android:layout_marginTop="5dp"
        android:textColor="@android:color/black"
        />

    <TextView
        android:id="@+id/timeStamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/postusername"
        android:text="TimeStamp"
        android:textAllCaps="true" />


</RelativeLayout>